(defwindow baralt
	:monitor 0
	:geometry (geometry :x "0%"
		:y "0px"
		:height "35px"
		:width "100%"
		:anchor "top center") 
	:stacking "fg" 
	:exclusive true 
	:wm-ignore false 
	(box 
		:spacing "-210"
		:halign "fill"
		:space-evenly "true" 
		:orientation "horizontal" 
		(bar-left) 
		(bar-center) 
		(bar-right)
	)
)
